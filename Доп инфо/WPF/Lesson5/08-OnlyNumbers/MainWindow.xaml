<Window x:Class="_08_OnlyNumbers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_08_OnlyNumbers"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!--Прикрепляемые события (Attached events)
    Если у нас есть несколько элементов одного и того же типа 
    и мы хотим привязать их к одному событию, то мы можем воспользоваться 
    прикрепляемыми событиями.-->
    <StackPanel Margin="10" 
                PreviewTextInput="pnl_PreviewTextInput" 
                PreviewKeyDown="pnl_PreviewKeyDown">

        <TextBox Name="textBox1" Height="22" VerticalAlignment="Top" Margin="2" />

        <TextBox Name="textBox2" Height="22" VerticalAlignment="Top" Margin="2" />

        <TextBox Name="textBox3" Height="22" VerticalAlignment="Top" Margin="2" />

    </StackPanel>
</Window>
