<Window x:Class="_05_CheckBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_05_CheckBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <GroupBox Margin="5" Padding="10" Header="Radiobutton Group 1">
            <StackPanel>
                <CheckBox>Group 1</CheckBox>
                <CheckBox>Group 1</CheckBox>
                <CheckBox>Group 1</CheckBox>
                <CheckBox Margin="0,10,0,0"  IsChecked="{x:Null}"
                                 >Group 2</CheckBox>
            </StackPanel>
        </GroupBox>
        <Grid Name="grid" Grid.Row="1">
            
        </Grid>
    </Grid>
</Window>
