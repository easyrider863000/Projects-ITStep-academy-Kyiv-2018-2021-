<Window x:Class="First.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:First"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Background="LightBlue">
            <TextBox FontSize="20" Name="txt1"/>
            <Label FontSize="20" Name="lbl" Background="{Binding ElementName=txt1, Path=Text}">label</Label>
            <TextBox FontSize="20" Name="txt2" Text="{Binding ElementName=txt1, Path=Text
                , UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
    </Grid>
</Window>
