<Window x:Class="_01_Binding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_01_Binding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="12">

        <!--Элемент источник данных-->
        <Slider Name="sliderFontSize" 
                Minimum="12"
                Maximum="80" 
                Margin="10" Value="10"></Slider>
        <!--<TextBlock x:Name="txtBlock"  Margin="10">
            Hello world
        </TextBlock>-->
        <!--Элемент с целевым свойством привязки-->
        <TextBlock x:Name="txtBlock"  Margin="10" 
                   FontSize="{Binding ElementName=sliderFontSize, Path=Value}">
            Hello world
        </TextBlock>

        <TextBlock Margin="10"
                   Text="{Binding ElementName=sliderFontSize, Path=Value}">
        </TextBlock>
       
    </StackPanel>
</Window>
