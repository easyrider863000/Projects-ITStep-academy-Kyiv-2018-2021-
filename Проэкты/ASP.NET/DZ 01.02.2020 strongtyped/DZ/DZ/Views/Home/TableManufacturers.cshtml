@model IEnumerable<DAL_Paggination.Manufacturer>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ManufacturerId</th>
            <th>ManufacturerName</th>
            <th>Button for delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var manufacturer in Model)
        {
            <tr>
                <td>@manufacturer.ManufacturerId</td>
                <td>@manufacturer.ManufacturerName</td>
                <td>
                    @Ajax.ActionLink("Delete",
                                         "Delete",
                                         new { @id = manufacturer.ManufacturerId, @type = "Manufacturer" },
                                         new AjaxOptions { UpdateTargetId="place"},
                                         new {@class = ViewBag.good.IsInvolvedManufacturer(manufacturer.ManufacturerId)? "btn btn-danger disabled" : "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
<div id="paging">
    @for (int i = 0; i < ViewBag.PageCount; i++)
    {
        @Ajax.ActionLink($"{i + 1}", "TableManufacturers", new { id = @i + 1 }, new AjaxOptions { UpdateTargetId = "place" }, new { @class = "btn btn-success" })
    }
</div>
