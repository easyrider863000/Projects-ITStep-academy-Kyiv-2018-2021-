
@{
    ViewBag.Title = "View";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <meta charset="utf-8" />
    <title>first web-aplication</title>
</head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Menu</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>

            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Category", "Category", "Home", new { area = "" }, new { @class = "navbar-brand" })"
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Manufacturer", "Manufacturer", "Home", new { area = "" }, new { @class = "navbar-brand" })"
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Good", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })"
                    </li>
                </ul>
            </div>
        </nav>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Count</th>
                    <th>Price</th>
                    <th>CategoryId</th>
                    <th>ManufacturerId</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in ViewBag.DataSource)
                {
                    <tr>
                        <td>@c.GoodId</td>
                        <td>@c.GoodName</td>
                        <td>@c.GoodCount</td>
                        <td>@c.Price</td>
                        <td>@c.CategoryId</td>
                        <td>@c.ManufacturerId</td>
                    </tr>
                }
            </tbody>
        </table>

    </body>
</html>
